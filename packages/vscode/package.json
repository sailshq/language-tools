{
  "name": "sails-vscode",
  "displayName": "Sails",
  "version": "0.0.0",
  "description": "Language support for Sails",
  "main": "index.js",
  "publisher": "sails",
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "qna": false,
  "keywords": [
    "sails",
    "node",
    "typescript",
    "javascript",
    "react",
    "vue",
    "svelte"
  ],
  "sponsor": {
    "url": "https://github.com/sponsors/dominuskelvin"
  },
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#14acc2",
    "theme": "dark"
  },
  "scripts": {
		"build": "node scripts/build -- --minify",
		"watch": "npm run build -- --watch",
		"pack": "npm run build && vsce package",
		"release": "npm run build && vsce publish"
	},
  "devDependencies": {
    "@sailshq/language-server": "^0.0.0",
    "@types/vscode": "^1.88.0",
    "@volar/language-server": "^2.1.6",
    "@volar/vscode": "^2.1.6",
    "esbuild": "^0.20.2",
    "vsce": "^2.15.0",
    "vscode-languageclient": "^9.0.1"
  },
  "activationEvents": [
    "workspaceContains:.sailsrc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sailshq/language-tools.git",
    "directory": "packages/vscode"
  },
  "author": "Kelvin Omereshone",
  "license": "MIT"
